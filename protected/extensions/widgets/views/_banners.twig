{{ import('css','banners.css','ext.widgets.css') }}
{{ import('js','swfobject.js') }}

{% set bannerW = const("Banners", "IMAGE_W") %}
{% set bannerH = const("Banners", "IMAGE_H") %}

<div class='banners-widget'>
    <div class='col1'>
    </div>
    <div class='col2-3'>
    <div class='banner'>
            {% if banner.getFlashUrl() %}
                {% set idRand = random() %}
                <script type="text/javascript">
                    swfobject.embedSWF("{{banner.getFlashUrl()}}", "myContent{{idRand}}", '{{bannerW}}', '{{bannerH}}', "9.0.0");
                </script>
                <div class='cont'>
                    {% if banner.link %}
                        <a href='{{banner.link}}' class='absolute' style='width:{{bannerW}}; height:{{bannerH}}'></a>
                    {% endif %}
                    <div id="myContent{{idRand}}" class='absolute'>
                        <p>Возможно у вас не установлен Flash player <a href="http://www.adobe.com/go/getflashplayer"><img src="http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif" alt="Get Adobe Flash player" /></a></p>
                    </div>
                </div>
            {% elseif banner.getImageUrl() %}
                {% if banner.link %}<a href='{{banner.link}}'>{% endif %}
                    <img src='{{banner.getImageUrl()}}' height='{{bannerH}}'>
                {% if banner.link %}</a>{% endif %}
            {% endif %}
        </div>
    </div>

    <div class='clearfix'></div>

    <div class='separators-group'>
        <div class='separator'></div>
        <div class='separator-gap'></div>
        <div class='separator'></div>
    </div>
</div>