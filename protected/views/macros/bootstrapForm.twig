{% macro label(id, labelText) %}
    {{ static('CHtml', 'label', [labelText, id, {'class':'col-sm-2  control-label'}])|raw }}
{% endmacro %}


{% macro textField(id, labelText='', placeholder='', value='') %}
    <div class="form-group" id='js-field-{{id}}'>
        {% if labelText %}
            {{ _self.label(id, labelText) }}
        {% endif %}
        <div class="col-sm-10">
            {{ static('CHtml', 'textField', [id, value, {'class':'form-control', 'placeholder':placeholder} ])|raw }}
        </div>
    </div>
{% endmacro %}


