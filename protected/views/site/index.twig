{% extends 'views/layouts/main.twig' %}

{% block js %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function() {
            var btnDamask = $('#js-damask-btn');
            var btnOdnoOkno = $('#js-odno-okno-btn');

            btnDamask.click(function() {
                window.location = "{{ link({0:'/damask/damask/index'}) }}";
            });

            btnOdnoOkno.click(function() {
                window.location = "{{ link({0:'/rldd/rldd/index'}) }}";
            });
        });
    </script>
{% endblock %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="well center-block" style="max-width: 400px;">
                <button type="button" class="btn btn-primary btn-lg btn-block" id='js-damask-btn'>
                    {{ _t('rldd', 'Записаться в очередь') }}
                </button>
                <button type="button" class="btn btn-default btn-lg btn-block" id='js-odno-okno-btn'>
                    {{ _t('rldd', 'Узнать статус заявки') }}
                </button>
            </div>
        </div>
    </div>
{% endblock %}
